# Azure SQL Database Configuration
AZURE_SQL_SERVER=your-server.database.windows.net
AZURE_SQL_DATABASE=your-database-name
AZURE_SQL_USERNAME=your-username
AZURE_SQL_PASSWORD=your-password

# SSL/TLS Configuration
# AZURE_SQL_ENCRYPT: Enable encryption (yes/no) - Default: yes
# AZURE_SQL_TRUST_SERVER_CERTIFICATE: Trust server certificate without validation (yes/no)
#   - Use 'yes' for development or when experiencing SSL certificate issues
#   - Use 'no' for production with proper certificate validation
#   - Default: no
AZURE_SQL_ENCRYPT=yes
AZURE_SQL_TRUST_SERVER_CERTIFICATE=no

# BG/NBD Model Configuration
PREDICTION_PERIOD_DAYS=365
ENGAGEMENT_THRESHOLD=0.5
SAMPLE_SIZE=10000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Development Settings
DEBUG=False
ENVIRONMENT=development

# Model Output Paths
MODEL_OUTPUT_DIR=models/
DATA_OUTPUT_DIR=data/processed/
VISUALIZATION_OUTPUT_DIR=outputs/visualizations/