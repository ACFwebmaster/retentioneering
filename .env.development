# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains development-friendly environment variables for the
# Non-Profit Engagement Model project. This configuration prioritizes
# ease of development, debugging, and testing over production performance.
#
# Copy this file to .env for local development.
# =============================================================================

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=True
DEV_MODE=True

# =============================================================================
# AZURE SQL DATABASE CONFIGURATION
# =============================================================================
# Development database settings - can use local SQL Server or Azure SQL

# Database Connection (Development)
AZURE_SQL_SERVER=localhost
AZURE_SQL_DATABASE=nonprofit_engagement_dev
AZURE_SQL_USERNAME=dev_user
AZURE_SQL_PASSWORD=dev_password_123
AZURE_SQL_DRIVER=ODBC Driver 18 for SQL Server

# SSL/TLS Configuration (Development)
# WARNING: TrustServerCertificate=yes bypasses certificate validation
# This is acceptable for development but NEVER use in production without proper certificates
AZURE_SQL_ENCRYPT=yes
AZURE_SQL_TRUST_SERVER_CERTIFICATE=yes

# Alternative: Use SQLite for local development (uncomment to use)
# DATABASE_URL=sqlite:///data/development.db
# USE_SQLITE=True

# Connection Pool Settings (Development Optimized)
DB_POOL_SIZE=2
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=10
DB_POOL_RECYCLE=3600
DB_CONNECTION_TIMEOUT=10
DB_COMMAND_TIMEOUT=30

# Database Retry Configuration
DB_MAX_RETRIES=2
DB_RETRY_DELAY=0.5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Development logging with verbose output for debugging

LOG_LEVEL=DEBUG
LOG_FILE=logs/development.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(funcName)s:%(lineno)d - %(message)s

# Development Logging Features
LOG_SQL_QUERIES=True
LOG_PERFORMANCE_METRICS=True
LOG_MEMORY_USAGE=True

# Console Logging
ENABLE_CONSOLE_LOGGING=True
CONSOLE_LOG_LEVEL=DEBUG

# =============================================================================
# BG/NBD MODEL CONFIGURATION
# =============================================================================
# Development model parameters optimized for fast iteration

# Model Parameters (Smaller for faster development)
PREDICTION_PERIOD_DAYS=90
ENGAGEMENT_THRESHOLD=0.3
SAMPLE_SIZE=1000

# MCMC Sampling Configuration (Development - Fast)
MCMC_DRAWS=500
MCMC_TUNE=250
MCMC_CHAINS=2
MCMC_CORES=2
MCMC_TARGET_ACCEPT=0.8

# Model Performance Settings
MODEL_BATCH_SIZE=100
MODEL_CACHE_SIZE=1000
MODEL_PARALLEL_JOBS=2

# Development Model Features
ENABLE_MODEL_DEBUGGING=True
SAVE_INTERMEDIATE_RESULTS=True
PLOT_CONVERGENCE_DIAGNOSTICS=True

# =============================================================================
# OUTPUT DIRECTORIES
# =============================================================================
# Development data and model storage paths

MODEL_OUTPUT_DIR=models/development/
DATA_OUTPUT_DIR=data/development/processed/
VISUALIZATION_OUTPUT_DIR=outputs/development/visualizations/
LOGS_OUTPUT_DIR=logs/development/

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Development security configuration (relaxed for ease of development)

# Encryption Settings (Disabled for development)
ENCRYPT_SENSITIVE_DATA=False
ENCRYPTION_KEY_PATH=keys/dev_encryption.key
DATA_ENCRYPTION_ALGORITHM=AES-256-GCM

# Authentication & Authorization (Simplified)
ENABLE_API_AUTHENTICATION=False
API_KEY_HEADER=X-API-Key
JWT_SECRET_KEY=dev-jwt-secret-key-not-secure
JWT_EXPIRATION_HOURS=168  # 1 week for development

# Data Privacy (Relaxed for development)
ANONYMIZE_PII=False
HASH_SUPPORTER_IDS=False
GDPR_COMPLIANCE_MODE=False

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
# Features specific to development environment

# Sample Data Generation
GENERATE_SAMPLE_DATA=True
SAMPLE_DATA_SIZE=5000
SAMPLE_DATA_SEED=42
USE_SYNTHETIC_DATA=True

# Development Tools
ENABLE_PROFILING=True
ENABLE_MEMORY_PROFILING=True
ENABLE_SQL_PROFILING=True

# Hot Reloading
ENABLE_AUTO_RELOAD=True
WATCH_FILE_CHANGES=True

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
# Development performance settings (prioritize debugging over speed)

# Memory Management
MAX_MEMORY_USAGE_GB=2
ENABLE_MEMORY_PROFILING=True
GARBAGE_COLLECTION_THRESHOLD=100

# Caching Configuration (Local only)
ENABLE_REDIS_CACHE=False
USE_LOCAL_CACHE=True
CACHE_TTL_SECONDS=300

# Parallel Processing (Limited for debugging)
MAX_WORKER_THREADS=2
ENABLE_MULTIPROCESSING=False
CHUNK_SIZE=100

# =============================================================================
# MONITORING & ALERTING
# =============================================================================
# Development monitoring (minimal)

# Application Monitoring
ENABLE_HEALTH_CHECKS=True
HEALTH_CHECK_INTERVAL=60
METRICS_COLLECTION_ENABLED=True

# External Monitoring Services (Disabled)
DATADOG_API_KEY=dev-datadog-key
DATADOG_APP_KEY=dev-datadog-app-key
ENABLE_DATADOG_LOGGING=False

# Alerting Configuration (Console only)
ALERT_EMAIL_RECIPIENTS=developer@localhost
ALERT_WEBHOOK_URL=http://localhost:8080/alerts
ENABLE_SLACK_ALERTS=False
SLACK_WEBHOOK_URL=

# Error Tracking (Local)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=dev

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Development testing settings

# Test Database
TEST_DATABASE_URL=sqlite:///data/test.db
USE_TEST_DATABASE=False

# Test Data
GENERATE_TEST_DATA=True
TEST_DATA_SIZE=100
TEST_SEED=123

# Test Features
RUN_INTEGRATION_TESTS=True
RUN_PERFORMANCE_TESTS=False
ENABLE_TEST_COVERAGE=True

# =============================================================================
# JUPYTER NOTEBOOK CONFIGURATION
# =============================================================================
# Settings for Jupyter notebook development

# Notebook Settings
JUPYTER_PORT=8888
JUPYTER_HOST=localhost
JUPYTER_TOKEN=dev-token-123

# Plotting Configuration
MATPLOTLIB_BACKEND=Qt5Agg
PLOT_STYLE=seaborn-v0_8
FIGURE_DPI=100
SAVE_PLOTS=True

# =============================================================================
# API DEVELOPMENT
# =============================================================================
# Development API settings

# API Server
API_HOST=localhost
API_PORT=8000
API_DEBUG=True
API_RELOAD=True

# CORS Settings (Permissive for development)
ENABLE_CORS=True
CORS_ORIGINS=*
CORS_METHODS=*
CORS_HEADERS=*

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Development feature toggles

ENABLE_EXPERIMENTAL_FEATURES=True
ENABLE_BETA_MODELS=True
ENABLE_ADVANCED_ANALYTICS=True
ENABLE_REAL_TIME_PREDICTIONS=False

# Development-specific features
ENABLE_DEBUG_ENDPOINTS=True
ENABLE_MOCK_DATA=True
ENABLE_PERFORMANCE_PROFILING=True

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Development third-party service configuration

# Email Service (Mock for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=dev
SMTP_PASSWORD=dev
SMTP_USE_TLS=False
USE_MOCK_EMAIL=True

# Cloud Storage (Local filesystem)
AZURE_STORAGE_ACCOUNT=devstorageaccount
AZURE_STORAGE_KEY=dev-storage-key
AZURE_STORAGE_CONTAINER=dev-container
USE_LOCAL_STORAGE=True
LOCAL_STORAGE_PATH=data/storage/

# =============================================================================
# RESOURCE LIMITS
# =============================================================================
# Development resource constraints (relaxed)

# Processing Limits
MAX_CONCURRENT_JOBS=2
MAX_PROCESSING_TIME_MINUTES=30
MAX_FILE_SIZE_MB=100

# Memory Limits
MAX_DATAFRAME_SIZE_MB=200
MAX_MODEL_SIZE_MB=50

# Network Limits
REQUEST_TIMEOUT_SECONDS=10
MAX_RETRIES=2
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# =============================================================================
# DEVELOPMENT UTILITIES
# =============================================================================
# Additional development tools and utilities

# Code Quality
ENABLE_LINTING=True
ENABLE_TYPE_CHECKING=True
ENABLE_CODE_FORMATTING=True

# Documentation
AUTO_GENERATE_DOCS=True
DOCS_PORT=8080

# Development Server
DEV_SERVER_PORT=5000
DEV_SERVER_HOST=localhost
DEV_SERVER_RELOAD=True